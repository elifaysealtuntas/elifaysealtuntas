#include <stdio.h>
    double sum=0;
    double avarage;
double get_avarage(int array1[],int size){
   for(int i=0;i<size;i++){
       sum = sum+ array1[i];
       
   }
   avarage= sum/size;
   return avarage;
}
int main()
{
    int i;
    int siz=0;
    
    
    double ort;
    printf("please enter a array size \n");
    scanf("%d",&siz);
    int arr4[siz];
    for( i=0;i<siz;i++){
        printf("please enter %d. value for arr4[%d]",i+1,i);
        scanf("%d",&arr4[i]);
    }
    ort= get_avarage(arr4,siz);
    printf("avarage is %lf\n",ort);



}
   ///////// sum'ı double olaraka tanımlamazsak avarageı yanlış alıyor.
   
   
  
